
FROM node:18-alpine as npminstall
RUN apk update && apk upgrade
WORKDIR /usr/src/app
COPY package.json ./
RUN npm --quiet install
RUN npm --quiet install -g nodemon
COPY lib lib
COPY models models
COPY index.js index.js

ENV NPM_CONFIG_UPDATE_NOTIFIER=false
CMD [ "nodemon", "--signal", "SIGTERM", "--exec", "node", "index.js" ]
