
FROM node:16-alpine as npminstall
RUN apk update && apk upgrade
WORKDIR /usr/src/app
COPY package.json ./
RUN npm --quiet install
RUN npm --quiet install -g nodemon
COPY lib lib
COPY models models
COPY index.js index.js

ENTRYPOINT [ "nodemon", "--signal", "SIGTERM", "--exec", "npm" ]
CMD [ "start" ]
